<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application>

        <activity
            android:name=".ui.OpenIdConnectActivity"
            android:launchMode="singleTop"
            android:exported="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="${vcWalletDomain}"
                    android:pathPrefix="/android/${applicationId}/callback"
                    android:scheme="${vcWalletScheme}" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.VcHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.Vcwalletandroidapp" />
        <activity
            android:name=".ui.DefaultVcConsentActivity"
            android:exported="false"
            android:label="@string/title_activity_default_verifiable_credential_cocent"
            android:theme="@style/Theme.Vcwalletandroidapp" />
        <activity
            android:name=".ui.OAuthErrorActivity"
            android:exported="false"
            android:label="@string/title_activity_oauth_error"
            android:theme="@style/Theme.Vcwalletandroidapp" />
        <activity
            android:name=".ui.DefaultVpConsentActivity"
            android:exported="false"
            android:label="@string/title_activity_default_vp_consent"
            android:theme="@style/Theme.Vcwalletandroidapp" />
        <activity
            android:name=".ui.PortraitCaptureActivity"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>